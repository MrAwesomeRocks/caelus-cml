import os
import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
ptscotchErrExitEnv = globalEnv.Clone()

sl = ptscotchErrExitEnv['SLASH']

# Path to source
src = ptscotchErrExitEnv['LIB_SRC']

ptscotchErrExitEnv.Append(CCFLAGS = '')

#===============================================================================
# Additions to include directories for this library
#===============================================================================
lib_inc = [src + sl + 'libscotch',  ptscotchErrExitEnv['MPI_INC']]

ptscotchErrExitEnv.Prepend(CPPPATH = lib_inc)
#===============================================================================
# Sources for this library
#===============================================================================
src_files = Split("""
library_error_exit.c
  """)

#===============================================================================
# Build this library
#===============================================================================
libptscotchErrExit = ptscotchErrExitEnv.SharedLibrary(target = 'libptscotcherrexit',
source = src_files)

#===============================================================================
# Install this library
#===============================================================================
install_dir = ptscotchErrExitEnv['LIB_PLATFORM_INSTALL']
ptscotchErrExitEnv.Alias('install', install_dir)
ptscotchErrExitEnv.Install(install_dir, libptscotchErrExit)

if (ptscotchErrExitEnv['WHICH_OS'] == "darwin"):

  ptscotchErrExitEnv.Append(SHLINKFLAGS ='-install_name @loader_path/../../../external/scotch-6.0.4/lib/libscotchErrExit.dylib')
