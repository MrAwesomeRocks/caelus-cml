import os
import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
ptdummySizesEnv = globalEnv.Clone()

sl = ptdummySizesEnv['SLASH']

# Path to source
src = ptdummySizesEnv['LIB_SRC']

ptdummySizesEnv.Append(CCFLAGS = ' -DSCOTCH_VERSION=6 -DSCOTCH_RELEASE=0 ' \
#                               '-DSCOTCH_PATCHLEVEL=4')
                               '-DSCOTCH_PATCHLEVEL=4 -DIDXSIZE64 -DINTSIZE64')

#===============================================================================
# Additions to include directories for this executable
#===============================================================================
lib_inc = [src + sl + 'libscotch', src + sl + 'libptscotch',ptdummySizesEnv['MPI_INC']]

ptdummySizesEnv.Prepend(CPPPATH = lib_inc)
#===============================================================================
# Sources for this executable
#===============================================================================
src_files = Split("""
  dummysizes.c
  """)

#===============================================================================
# Build this executable
#===============================================================================
binptdummySizes = ptdummySizesEnv.Program(target = 'ptdummySizes',
source = src_files)

#===============================================================================
# Install this executable
#===============================================================================
install_dir = ptdummySizesEnv['BIN_PLATFORM_INSTALL']
ptdummySizesEnv.Alias('install', install_dir)
ptdummySizesEnv.Install(install_dir, binptdummySizes)
