FoamFile
{
    version     2.0;
    format      ascii;
    class       pointScalarField;
    location    "0";
    object      heatFlux;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// this is not the correct dimension. I know

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    "(front|back|wall|porosityWall)"
    {
        type            groovyBC;
        value           uniform 0;
        valueExpression "toPoint(snGrad(h)*alphat)";
    }
    inlet
    {
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
    }
}


