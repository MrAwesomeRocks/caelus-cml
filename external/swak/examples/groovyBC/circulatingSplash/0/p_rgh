FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    floor
    {
        type            buoyantPressure;
        value           uniform 0;
    }

    sides       
    {
        //        type            totalPressure;
        type            buoyantPressure;
        value           uniform 0;
//         type            inletOutlet;
//         inletValue      uniform 0;
//         value           uniform 0;
        //        type            totalPressure;
        p0              uniform 0;
        U               U;
        phi             phi;
//         rho             none;
//         psi             none;
        gamma           1;
    }

    spill       
    {
        //        type            buoyantPressure;
        type            zeroGradient;
        value           uniform 0;
        //        type            inletOutlet;
        //        type fixedValue;
        inletValue      uniform 0;
//         value           uniform 0;
        //        type            totalPressure;
        p0              uniform 0;
        U               U;
        phi             phi;
//         rho             none;
//         psi             none;
        gamma           1;
    }

    atmosphere
    {
        //        type            buoyantPressure;
        // type            totalPressure;
        type fixedValue;
        p0              uniform 0;
        U               U;
        phi             phi;
        rho             rho;
        psi             none;
        gamma           1;
        value           uniform 0;
        // type groovyBC;
         valueExpression "0";
         gradientExpression "0";
         fractionExpression "(gamma>0.01) ? 1 : 0";
    }
}

