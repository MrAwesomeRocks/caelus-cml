import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
groovyStdBCEnv = globalEnv.Clone()

# Path to Caelus source
src = groovyStdBCEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this library
#===============================================================================
groovyStdBCEnv.Append(CXXFLAGS = '')

#===============================================================================
# Additions to include directories for this library
#===============================================================================
lib_inc = ['.','lnInclude', 
'../swakParsers/lnInclude',
'../groovyBC/lnInclude',
src + '/sampling/lnInclude'
]
	
groovyStdBCEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this library
#===============================================================================
lib_link_path = []
  
groovyStdBCEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this library
#===============================================================================
lib_link = ['sampling','swakParsers','groovyBC']

groovyStdBCEnv.Append(LIBS = lib_link)
  
#===============================================================================
# Sources for this library
#===============================================================================
src_files_groovyStdBC = Split("""
  groovyTotalPressureFvPatchScalarField.cpp
  groovyFlowRateInletVelocityFvPatchVectorField.cpp
  groovyFixedNormalSlipFvPatchFields.cpp
  groovyFixedNormalSlipPointPatchFields.cpp
  """)

src_files = src_files_groovyStdBC

#===============================================================================
# Build this library
#===============================================================================
libgroovyStdBCs = groovyStdBCEnv.SharedLibrary(target = 'libgroovyStandardBCs',
 source = src_files)

#===============================================================================
# Install this library
#===============================================================================
install_dir = groovyStdBCEnv['LIB_PLATFORM_INSTALL']
groovyStdBCEnv.Alias('install', install_dir)
groovyStdBCEnv.Install(install_dir, libgroovyStdBCs)

if (groovyStdBCEnv['WHICH_OS'] == "darwin"):

  groovyStdBCEnv.Append(SHLINKFLAGS ='-install_name @executable_path/../lib/libgroovyStandardBCs.dylib')
