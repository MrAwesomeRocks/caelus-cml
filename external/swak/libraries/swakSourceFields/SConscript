import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
swakSouFieldEnv = globalEnv.Clone()

# Path to Caelus source
src = swakSouFieldEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this library
#===============================================================================
swakSouFieldEnv.Append(CXXFLAGS = '')

#===============================================================================
# Additions to include directories for this library
#===============================================================================
lib_inc = ['.','lnInclude', 
'../swakParsers/lnInclude',
src + '/sampling/lnInclude',
src + '/fvOptions/lnInclude'
]
	
swakSouFieldEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this library
#===============================================================================
lib_link_path = []
  
swakSouFieldEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this library
#===============================================================================
lib_link = ['swakParsers','fvOptions']

swakSouFieldEnv.Append(LIBS = lib_link)
  
#===============================================================================
# Sources for this library
#===============================================================================
src_files_swakSouField = Split("""
  expressionSource.cpp
  forceEquation.cpp
  swakSetValues.cpp
  swakExplicitSources.cpp
  swakImplicitSources.cpp
  """)

src_files = src_files_swakSouField

#===============================================================================
# Build this library
#===============================================================================
libswakSouFields = swakSouFieldEnv.SharedLibrary(target = 'libswakSourceFields',
 source = src_files)

#===============================================================================
# Install this library
#===============================================================================
install_dir = swakSouFieldEnv['LIB_PLATFORM_INSTALL']
swakSouFieldEnv.Alias('install', install_dir)
swakSouFieldEnv.Install(install_dir, libswakSouFields)

if (swakSouFieldEnv['WHICH_OS'] == "darwin"):

  swakSouFieldEnv.Append(SHLINKFLAGS ='-install_name @executable_path/../lib/libswakSourceFields.dylib')
