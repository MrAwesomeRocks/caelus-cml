import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
simpSwakFuncObjEnv = globalEnv.Clone()

# Path to Caelus source
src = simpSwakFuncObjEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this library
#===============================================================================
simpSwakFuncObjEnv.Append(CXXFLAGS = '')

#===============================================================================
# Additions to include directories for this library
#===============================================================================
lib_inc = ['.','lnInclude', 
'../simpleFunctionObjects/lnInclude',
'../swakParsers/lnInclude',
src + '/sampling/lnInclude',
src + '/lagrangian/basic/lnInclude'
]
	
simpSwakFuncObjEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this library
#===============================================================================
lib_link_path = []
  
simpSwakFuncObjEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this library
#===============================================================================
lib_link = ['sampling','swakParsers','simpleFunctionObjects','lagrangian']

simpSwakFuncObjEnv.Append(LIBS = lib_link)
  
#===============================================================================
# Sources for this library
#===============================================================================
src_files_simpSwakFuncObj = Split("""
  general/swakExpressionFunctionObject.cpp
  general/dumpSwakExpressionFunctionObject.cpp
  general/dumpSwakGlobalVariableFunctionObject.cpp
  general/swakExpressionDistributionFunctionObject.cpp
  general/swakExpressionAverageDistributionFunctionObject.cpp
  general/writeAndEndSwakExpressionFunctionObject.cpp
  general/writeIfSwakExpressionFunctionObject.cpp
  patch/patchExpressionFunctionObject.cpp
  patch/patchExpressionDistributionFunctionObject.cpp
  functionObjectProxy/executeIfSwakExpression/executeIfSwakExpressionFunctionObject.cpp
  """)

src_files = src_files_simpSwakFuncObj

#===============================================================================
# Build this library
#===============================================================================
libsimpSwakFuncObjs = simpSwakFuncObjEnv.SharedLibrary(target = 'libsimpleSwakFunctionObjects',
 source = src_files)

#===============================================================================
# Install this library
#===============================================================================
install_dir = simpSwakFuncObjEnv['LIB_PLATFORM_INSTALL']
simpSwakFuncObjEnv.Alias('install', install_dir)
simpSwakFuncObjEnv.Install(install_dir, libsimpSwakFuncObjs)

if (simpSwakFuncObjEnv['WHICH_OS'] == "darwin"):

  simpSwakFuncObjEnv.Append(SHLINKFLAGS ='-install_name @executable_path/../lib/libsimpleSwakFunctionObjects.dylib')
