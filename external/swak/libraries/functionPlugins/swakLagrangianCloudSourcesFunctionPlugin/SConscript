import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
swakLagCSouEnv = globalEnv.Clone()

# Path to Caelus source
src = swakLagCSouEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this library
#===============================================================================
swakLagCSouEnv.Append(CXXFLAGS = '')

#===============================================================================
# Additions to include directories for this library
#===============================================================================
lib_inc = ['.','lnInclude', 
'../../swakParsers/lnInclude',
src + '/sampling/lnInclude',
src + '/thermophysicalModels/pdfs/lnInclude',
src + '/thermophysicalModels/specie/lnInclude',
src + '/thermophysicalModels/basic/lnInclude',
src + '/thermophysicalModels/liquids/lnInclude',
src + '/thermophysicalModels/liquidMixture/lnInclude',
src + '/thermophysicalModels/solids/lnInclude',
src + '/thermophysicalModels/solidMixture/lnInclude',
src + '/thermophysicalModels/reactionThermo/lnInclude',
src + '/thermophysicalModels/radiation/lnInclude',
src + '/thermophysicalModels/SLGThermo/lnInclude',
src + '/thermophysicalModels/properties/solidMixtureProperties/lnInclude',
src + '/thermophysicalModels/properties/liquidMixtureProperties/lnInclude',
src + '/thermophysicalModels/properties/solidProperties/lnInclude',
src + '/thermophysicalModels/properties/liquidProperties/lnInclude',
src + '/regionModels/regionModel/lnInclude',
src + '/regionModels/surfaceFilmModels/lnInclude',
src + '/lagrangian/basic/lnInclude',
src + '/lagrangian/intermediate/lnInclude',
src + '/lagrangian/solidParticle/lnInclude'
]
	
swakLagCSouEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this library
#===============================================================================
lib_link_path = []
  
swakLagCSouEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this library
#===============================================================================
lib_link = ['sampling','swakParsers',
'lagrangian','lagrangianIntermediate','thermophysicalFunctions',
'solidParticle','radiationModels','SLGThermo']

swakLagCSouEnv.Append(LIBS = lib_link)
  
#===============================================================================
# Sources for this library
#===============================================================================
src_files_swakLagCSou = Split("""
  LagrangianCloudSourcePluginFunction.cpp
  lcsMomentumSourcePluginFunction.cpp
  lcsMassFractionPluginFunction.cpp
  lcsRhoEffPluginFunction.cpp
  lcsVolumeFractionPluginFunction.cpp
  lcsScatteringFactorPluginFunction.cpp
  lcsEnthalpySourcePluginFunction.cpp
  lcsMassSourcePluginFunction.cpp
  lcsSpeciesSourcePluginFunction.cpp
  """)

src_files = src_files_swakLagCSou

#===============================================================================
# Build this library
#===============================================================================
libswakLagCSous = swakLagCSouEnv.SharedLibrary(target = 'libswakLagrangianCloudSourcesFunctionPlugin',
 source = src_files)

#===============================================================================
# Install this library
#===============================================================================
install_dir = swakLagCSouEnv['LIB_PLATFORM_INSTALL']
swakLagCSouEnv.Alias('install', install_dir)
swakLagCSouEnv.Install(install_dir, libswakLagCSous)

if (swakLagCSouEnv['WHICH_OS'] == "darwin"):

  swakLagCSouEnv.Append(SHLINKFLAGS ='-install_name @executable_path/../lib/libswakLagrangianCloudSourcesFunctionPlugin.dylib')
