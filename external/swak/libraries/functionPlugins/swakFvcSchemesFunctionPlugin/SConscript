import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
swakFvSchEnv = globalEnv.Clone()

# Path to Caelus source
src = swakFvSchEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this library
#===============================================================================
swakFvSchEnv.Append(CXXFLAGS = '')

#===============================================================================
# Additions to include directories for this library
#===============================================================================
lib_inc = ['.','lnInclude', 
'../../swakParsers/lnInclude',
src + '/sampling/lnInclude'
]
	
swakFvSchEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this library
#===============================================================================
lib_link_path = []
  
swakFvSchEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this library
#===============================================================================
lib_link = ['swakParsers']

swakFvSchEnv.Append(LIBS = lib_link)
  
#===============================================================================
# Sources for this library
#===============================================================================
src_files_swakFvSch = Split("""
  fvcInterpolationFunctionPlugin.cpp
  fvcGradFunctionPlugin.cpp
  fvcSnGradFunctionPlugin.cpp
  fvcDivFunctionPlugin.cpp
  fvcConvectionDivFunctionPlugin.cpp
  fvcLaplacianFunctionPlugin.cpp
  fvcCoeffLaplacianFunctionPlugin.cpp
  fvcSurfCoeffLaplacianFunctionPlugin.cpp
  """)

src_files = src_files_swakFvSch

#===============================================================================
# Build this library
#===============================================================================
libswakFvSchs = swakFvSchEnv.SharedLibrary(target = 'libswakFvcSchemesFunctionPlugin',
 source = src_files)

#===============================================================================
# Install this library
#===============================================================================
install_dir = swakFvSchEnv['LIB_PLATFORM_INSTALL']
swakFvSchEnv.Alias('install', install_dir)
swakFvSchEnv.Install(install_dir, libswakFvSchs)

if (swakFvSchEnv['WHICH_OS'] == "darwin"):

  swakFvSchEnv.Append(SHLINKFLAGS ='-install_name @executable_path/../lib/libswakFvcSchemesFunctionPlugin.dylib')
