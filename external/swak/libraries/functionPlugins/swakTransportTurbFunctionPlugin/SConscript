import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
swakTransTurbEnv = globalEnv.Clone()

# Path to Caelus source
src = swakTransTurbEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this library
#===============================================================================
swakTransTurbEnv.Append(CXXFLAGS = '')

#===============================================================================
# Additions to include directories for this library
#===============================================================================
lib_inc = ['.','lnInclude', 
'../../swakParsers/lnInclude',
src + '/sampling/lnInclude',
src + '/turbulenceModels/',
src + '/turbulenceModels/LES/LESdeltas/lnInclude',
src + '/turbulenceModels/incompressible/turbulenceModel/lnInclude',
src + '/turbulenceModels/incompressible/LES/lnInclude',
src + '/turbulenceModels/incompressible/RAS/lnInclude',
src + '/transportModels',
src + '/transportModels/incompressible/lnInclude'
]
	
swakTransTurbEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this library
#===============================================================================
lib_link_path = []
  
swakTransTurbEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this library
#===============================================================================
lib_link = ['swakParsers','incompressibleTurbulenceModel',
'incompressibleLESModels','incompressibleRASModels','incompressibleTransportModels']

swakTransTurbEnv.Append(LIBS = lib_link)
  
#===============================================================================
# Sources for this library
#===============================================================================
src_files_swakTransTurb = Split("""
  swakTransportModelsPluginFunction.cpp
  swakIncompressibleTurbulencePluginFunction.cpp
  """)

src_files = src_files_swakTransTurb

#===============================================================================
# Build this library
#===============================================================================
libswakTransTurbs = swakTransTurbEnv.SharedLibrary(target = 'libswakTransportTurbFunctionPlugin',
 source = src_files)

#===============================================================================
# Install this library
#===============================================================================
install_dir = swakTransTurbEnv['LIB_PLATFORM_INSTALL']
swakTransTurbEnv.Alias('install', install_dir)
swakTransTurbEnv.Install(install_dir, libswakTransTurbs)

if (swakTransTurbEnv['WHICH_OS'] == "darwin"):

  swakTransTurbEnv.Append(SHLINKFLAGS ='-install_name @executable_path/../lib/libswakTransportTurbFunctionPlugin.dylib')
