import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
calcNonUniEnv = globalEnv.Clone()

# Path to source
src = calcNonUniEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this executable
#===============================================================================
calcNonUniEnv.Append(CCFLAGS = '')

#===============================================================================
# Additions to include directories for this executable
#===============================================================================
lib_inc = [
'../../libraries/swakParsers/lnInclude',
src + '/thermophysicalModels/radiationModels/lnInclude',
src + '/fvOptions/lnInclude'
]

calcNonUniEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this executable
#===============================================================================
lib_link_path = []

calcNonUniEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this executable
#===============================================================================
if calcNonUniEnv['WHICH_OS'] == "windows":
  calcNonUniEnv.Prepend(LINKFLAGS = '')
  lib_link = ['libbasicThermophysicalModels','libbasicSolidThermo',
'libradiationModels','libfvOptions']
else:
  lib_link = ['basicThermophysicalModels','basicSolidThermo',
'radiationModels','fvOptions']
    
calcNonUniEnv.Append(LIBS = lib_link)
    
#===============================================================================
# Sources for this executable
#===============================================================================
src_files = Split("""  
  calcNonUniformOffsetsForMapped.cpp
  """)

#===============================================================================
# Build this executable
#===============================================================================
bincalcNonUni = calcNonUniEnv.Program(target = 
'calcNonUniformOffsetsForMapped', source = src_files)

#===============================================================================
# Install this executable
#===============================================================================
install_dir = calcNonUniEnv['BIN_PLATFORM_INSTALL']
calcNonUniEnv.Alias('install', install_dir)
calcNonUniEnv.Install(install_dir, bincalcNonUni)
