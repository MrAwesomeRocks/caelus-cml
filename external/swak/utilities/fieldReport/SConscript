import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
fieldReportEnv = globalEnv.Clone()

# Path to source
src = fieldReportEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this executable
#===============================================================================
fieldReportEnv.Append(CCFLAGS = '')

#===============================================================================
# Additions to include directories for this executable
#===============================================================================
lib_inc = [
'../../libraries/simpleFunctionObjects/lnInclude',
'../../libraries/swakParsers/lnInclude',
src + '/thermophysicalModels/radiationModels/lnInclude',
src + '/sampling/lnInclude',
src + '/fvOptions/lnInclude'
]

fieldReportEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this executable
#===============================================================================
lib_link_path = []

fieldReportEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this executable
#===============================================================================
if fieldReportEnv['WHICH_OS'] == "windows":
  fieldReportEnv.Prepend(LINKFLAGS = '')
  lib_link = ['libbasicThermophysicalModels','libbasicSolidThermo',
'libradiationModels','libfvOptions','libswakParsers']
else:
  lib_link = ['basicThermophysicalModels','basicSolidThermo',
'radiationModels','fvOptions','swakParsers']
    
fieldReportEnv.Append(LIBS = lib_link)
    
#===============================================================================
# Sources for this executable
#===============================================================================
src_files = Split("""  
  fieldReport.cpp
  """)

#===============================================================================
# Build this executable
#===============================================================================
binfieldReport = fieldReportEnv.Program(target = 
'fieldReport', source = src_files)

#===============================================================================
# Install this executable
#===============================================================================
install_dir = fieldReportEnv['BIN_PLATFORM_INSTALL']
fieldReportEnv.Alias('install', install_dir)
fieldReportEnv.Install(install_dir, binfieldReport)
