import subprocess
Import('globalEnv')

# Clone the global environment so changes made he are not pass onto subsequent 
# libraries
funkyWarpMeshEnv = globalEnv.Clone()

# Path to source
src = funkyWarpMeshEnv['LIB_SRC']

#===============================================================================
# Additions to compiler flags for this executable
#===============================================================================
funkyWarpMeshEnv.Append(CCFLAGS = '')

#===============================================================================
# Additions to include directories for this executable
#===============================================================================
lib_inc = [
'../../libraries/swakParsers/lnInclude',
src + '/sampling/lnInclude'
]

funkyWarpMeshEnv.Prepend(CPPPATH = lib_inc)

#===============================================================================
# Additions to link library paths for this executable
#===============================================================================
lib_link_path = []

funkyWarpMeshEnv.Prepend(LIBPATH = lib_link_path)

#===============================================================================
# Additions to link libraries for this executable
#===============================================================================
if funkyWarpMeshEnv['WHICH_OS'] == "windows":
  funkyWarpMeshEnv.Prepend(LINKFLAGS = '')
  lib_link = ['libswakParsers']
else:
  lib_link = ['swakParsers']
    
funkyWarpMeshEnv.Append(LIBS = lib_link)
    
#===============================================================================
# Sources for this executable
#===============================================================================
src_files = Split("""  
  funkyWarpMesh.cpp
  """)

#===============================================================================
# Build this executable
#===============================================================================
binfunkyWarpMesh = funkyWarpMeshEnv.Program(target = 
'funkyWarpMesh', source = src_files)

#===============================================================================
# Install this executable
#===============================================================================
install_dir = funkyWarpMeshEnv['BIN_PLATFORM_INSTALL']
funkyWarpMeshEnv.Alias('install', install_dir)
funkyWarpMeshEnv.Install(install_dir, binfunkyWarpMesh)
