@echo off
echo Welcome to Caelus run environment on %computername%

@set WHICH_OS=$WHICH_OS
@set SLASH=$SLASH
    
REM Necessary environment variables
@set PROJECT_NAME=$PROJECT_NAME
@set PROJECT_VER=$PROJECT_VER
@set PRECISION_OPTION=$PRECISION_OPTION
@set COMPILER_ARCH=$COMPILER_ARCH
@set BUILD_TYPE=$BUILD_TYPE
@set FLEXXX=$FLEXXX
@set PROJECT_DIR=$PROJECT_DIR

REM Important but not necessarily required environment variables
@set COMPILER=$COMPILER
@set COLOUR_BUILD=$COLOUR_BUILD

REM Compound environment variables
@set PROJECT=$PROJECT
@set CAELUS_PROJECT_DIR=$CAELUS_PROJECT_DIR
@set BUILD_OPTION=$BUILD_OPTION
@set EXTERNAL_DIR=$EXTERNAL_DIR
@set MPI_INC=$MPI_INC
@set MPI_LIB=$MPI_LIB
@set MPI_LIB_NAME=$MPI_LIB_NAME
@set SCOTCH_PATH=$SCOTCH_PATH
@set METIS_PATH=$METIS_PATH
@set ZLIB_PATH=$ZLIB_PATH
@set FLEXXX_PATH=$FLEXXX_PATH
@set BIN_PLATFORM_INSTALL=$BIN_PLATFORM_INSTALL
@set PATH=$PATH
@set LIB_PLATFORM_INSTALL=$LIB_PLATFORM_INSTALL
@set LD_LIBRARY_PATH=$LD_LIBRARY_PATH
@set MPI_BUFFER_SIZE=$MPI_BUFFER_SIZE

REM User environment variables
@set LIB_SRC=$LIB_SRC
@set CAELUS_APP=$CAELUS_APP
@set CAELUS_SOLVERS=$CAELUS_SOLVERS
@set CAELUS_UTILITIES=$CAELUS_UTILITIES
@set CAELUS_TUTORIALS=$CAELUS_TUTORIALS
@set CAELUS_JOB_DIR=$CAELUS_JOB_DIR
@set CAELUS_USER_DIR=$CAELUS_USER_DIR
@set CAELUS_RUN=$CAELUS_RUN
@set CAELUS_USER_APPBIN=$CAELUS_USER_APPBIN
@set CAELUS_USER_LIBBIN=$CAELUS_USER_LIBBIN
