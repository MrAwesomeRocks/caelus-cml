setenv WHICH_OS &WHICH_OS
setenv SLASH &SLASH
    
# Necessary environment variables
setenv PROJECT_NAME &PROJECT_NAME
setenv PROJECT_VER &PROJECT_VER
setenv PRECISION_OPTION &PRECISION_OPTION
setenv COMPILER_ARCH &COMPILER_ARCH
setenv BUILD_TYPE &BUILD_TYPE
setenv INT_TYPE &INT_TYPE
setenv FLEXXX &FLEXXX
setenv PROJECT_DIR &PROJECT_DIR

# Important but not necessarily required environment variables
setenv COMPILER &COMPILER
setenv COLOUR_BUILD &COLOUR_BUILD

# Compound environment variables
setenv PROJECT &PROJECT
setenv CAELUS_PROJECT_DIR &CAELUS_PROJECT_DIR
setenv BUILD_OPTION &BUILD_OPTION
setenv EXTERNAL_DIR &EXTERNAL_DIR
setenv MPI_INC &MPI_INC
setenv MPI_LIB &MPI_LIB
setenv MPI_LIB_NAME &MPI_LIB_NAME

set OPAL=&OPAL_PREFIX
if ( ! -z "${OPAL}" ) then
   setenv OPAL_PREFIX $OPAL
endif

setenv SCOTCH_PATH &SCOTCH_PATH
setenv METIS_PATH &METIS_PATH
setenv ZLIB_PATH &ZLIB_PATH
setenv FLEXXX_PATH &FLEXXX_PATH
setenv BIN_PLATFORM_INSTALL &BIN_PLATFORM_INSTALL
setenv PATH &PATH
setenv LIB_PLATFORM_INSTALL &LIB_PLATFORM_INSTALL
setenv DYLD_FALLBACK_LIBRARY_PATH &LD_LIBRARY_PATH
setenv MPI_BUFFER_SIZE &MPI_BUFFER_SIZE

# User environment variables
setenv LIB_SRC &LIB_SRC
setenv CAELUS_APP &CAELUS_APP
setenv CAELUS_SOLVERS &CAELUS_SOLVERS
setenv CAELUS_UTILITIES &CAELUS_UTILITIES
setenv CAELUS_TUTORIALS &CAELUS_TUTORIALS
setenv CAELUS_JOB_DIR &CAELUS_JOB_DIR
setenv CAELUS_USER_DIR &CAELUS_USER_DIR
setenv CAELUS_RUN &CAELUS_RUN
setenv CAELUS_USER_APPBIN &CAELUS_USER_APPBIN
setenv CAELUS_USER_LIBBIN &CAELUS_USER_LIBBIN
